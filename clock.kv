BoxLayout:
     orientation: 'vertical'
     canvas:
          Color:
               rgb: 0.55, 0.55, 0.55
          Rectangle:
               size: self.size
               pos: self.pos


     ScrollView:
          size: self.size
          size_hint: (1, 0.5)

          GridLayout:
               cols: 1
               padding: dp(5)
               size_hint: (1, 0.5)
               height: self.minimum_height

               Label:
                    id: label_1
                    text: '---------------------------------           Miner GOVNO Coin         ---------------------------------'
                    size_hint_y: None
                    valign: 'top'
                    height: self.texture_size[1]
                    text_size: self.width - dp(10), None
                    color: 0, 0, 0, 1
     BoxLayout:
          height: 20
          orientation: 'vertical'
          size_hint: (1, 0.035)
          BoxLayout:
               height: "40dp"
               Label:
                    text: "ID:"
               TextInput:
                    id: textinput1
                    text: ''
                    background_color: (0.55, 0.55, 0.55,1)
                    size_hint_x: 20
                    font_size: 20
     BoxLayout:
          height: 20
          orientation: 'vertical'
          size_hint: (1, 0.05)
          Button:
               id: start_stop
               text: 'Start'
               on_press: app.start_stop()